<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framely_main"
    android:layout_width="1600dp"
    android:layout_height="900dp" 
    android:background="#FF000000">

    <com.android.camera.v66.ObserveScrollView
        android:id="@+id/scrollview"
        android:layout_width="1600dp"
        android:layout_height="400dp" >

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="1600dp"
            android:layout_height="900dp"
            android:animateLayoutChanges="true" >

            <TextureView
                android:id="@+id/stream_backview"
                android:layout_width="1600dp"
                android:layout_height="900dp" />

            <TextureView
                android:id="@+id/stream_preview"
                android:layout_width="1600dp"
                android:layout_height="900dp" />
            <TextureView
                android:id="@+id/stream_leftview"
                android:layout_width="1600dp"
                android:layout_height="900dp" />
            <TextureView
                android:id="@+id/stream_rightview"
                android:layout_width="1600dp"
                android:layout_height="900dp" />
        </FrameLayout>
    </com.android.camera.v66.ObserveScrollView>

    <TextView
        android:id="@+id/tv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/red"
        android:textSize="35sp"
        android:textStyle="bold" />
    
    <com.android.camera.v66.RecordImageView
        android:id="@+id/iv_preview_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="@dimen/record_icon_margin_left"
        android:layout_marginTop="@dimen/record_icon_margin_top"
        android:visibility="gone"
        android:src="@drawable/icon_record_red_point"/>
    
    <Button
        android:id="@+id/bt_pre_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:background="@drawable/reverse_back_selector" />

</FrameLayout>
