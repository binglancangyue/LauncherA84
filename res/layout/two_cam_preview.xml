<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_win"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/layout_first"
            android:layout_width="@dimen/float_window_width"
            android:layout_height="@dimen/float_window_height" >

            <SurfaceView
                android:id="@+id/first_preview"
                android:layout_width="@dimen/float_window_width"
                android:layout_height="@dimen/float_window_height" />

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.android.camera.v66.RefleshTextView
                android:id="@+id/first_hint_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="@dimen/preview_statusbar_padding"
                android:text="@string/please_insert_back_cam"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_midium"
                android:visibility="gone" />
        </FrameLayout>
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="110dp" />

        <FrameLayout
            android:id="@+id/layout_second"
            android:layout_width="@dimen/float_window_width"
            android:layout_height="@dimen/float_window_height"
            android:layout_marginTop="111dp" >

            <SurfaceView
                android:id="@+id/second_preview"
                android:layout_width="@dimen/float_window_width"
                android:layout_height="@dimen/float_window_height" />

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.android.camera.v66.RefleshTextView
                android:id="@+id/second_hint_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="@dimen/preview_statusbar_padding"
                android:text="@string/please_insert_back_cam"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_midium"
                android:visibility="gone" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>